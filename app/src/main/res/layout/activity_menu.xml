<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context=".Menu_Dashboard.Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg3">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginLeft="170dp"
                android:background="@drawable/d"
                android:layout_marginTop="15dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@drawable/we"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/care" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/fix"
                android:layout_marginTop="97dp"
                android:layout_marginLeft="120dp"/>


        </RelativeLayout>


        <GridLayout
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_weight ="8"
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:layout_height="wrap_content"
            tools:ignore="ObsoleteLayoutParam"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                >

                <LinearLayout
                    android:id="@+id/cardMobil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/maintenance"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bengkel Mobil"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/cardMotor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/vespa" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bengkel Motor"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="-18dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/cardCuciMobil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="16dp"
                        android:src="@drawable/carwash"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuci Mobil"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/cardCuciMotor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="105dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/motorwash"
                        android:paddingTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuci Motor"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textStyle="bold"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
        </GridLayout>
        
<!--        <Button-->
<!--            android:id="@+id/btnMenu"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:background="@drawable/editboxisi"-->
<!--            android:layout_gravity="center"/>-->
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NavBot"
            android:layout_gravity="bottom"
            design:menu="@menu/main_menu"
            android:background="#FFC300"/>

    </FrameLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>