<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuci_Mobil.Display_List_CuciMobil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/CuciMobilView"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/TitleBengkelCuciMobil"
            android:layout_width="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DescriptionBengkelCuciMobil"
            android:layout_width="200dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:textColor="#757575"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/callBengkelCuciMobil"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/telephone"/>

        <TextView
            android:id="@+id/KontakBengkelCuciMobil"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="55dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/wa"/>

        <TextView
            android:id="@+id/KontakBengkelCuciMobilWA"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="-22dp"
            android:layout_marginLeft="55dp"/>




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/line1"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Layanan yang Disediakan"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/LayananCuciMobil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:layoutAnimation="@anim/layout_slide_from_bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="15dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>

</ScrollView>